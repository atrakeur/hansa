<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical|center_horizontal"
    android:orientation="vertical"
    tools:context="fr.univ_rouen.hansa.activity.MainMenuActivity"
    android:background="@drawable/bk_menu">

    <Button
        android:id="@+id/new_game"
        android:text="@string/new_game"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:layout_marginTop="80dp"
        style="@style/MyStyleMenu" />

    <Button
        android:id="@+id/load_game"
        android:text="@string/load_game"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        style="@style/MyStyleMenu" />

    <Button
        android:id="@+id/options_game"
        android:text="@string/options_game"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        style="@style/MyStyleMenu" />

    <Button
        android:id="@+id/exit_game"
        android:text="@string/exit_game"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        style="@style/MyStyleMenu" />


</LinearLayout>
