<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:circleview="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/escritoire_background"
    android:layout_gravity="center"
    android:layout_weight="1">

    <TextView
        android:layout_weight="4.8"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_weight="5.2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_weight="1.25"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <fr.univ_rouen.hansa.view.FontFitTextView
            android:id="@+id/nb_clavis_urbis"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
        <fr.univ_rouen.hansa.view.FontFitTextView
            android:id="@+id/nb_actiones"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
        <fr.univ_rouen.hansa.view.FontFitTextView
            android:id="@+id/nb_liber_sophia"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
        <fr.univ_rouen.hansa.view.FontFitTextView
            android:id="@+id/nb_bursa"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
        <TextView
            android:layout_weight="1.25"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        </LinearLayout>

    <LinearLayout
        android:layout_weight="2.6"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
